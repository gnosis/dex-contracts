{
    "extends": "solhint:default",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "max-line-length": [
            "error",
            156
        ],
        "function-max-lines": [
            "error",
            67
        ],
        "max-states-count": [
            "error",
            18
        ],
        "compiler-fixed": true,
        "no-simple-event-func-name": true,
        "not-rely-on-time": false,
        "prettier/prettier": "error",
        "no-empty-blocks": "off",
        "two-lines-top-level-separator": "warn",
        "bracket-align": "warn"
    }
}